<h1> Sign up</h1>
<%= form_for @player do |f| %>
  <%= f.label "Email" %>
  <%= f.text_field :email %>
  <%= f.label "Password" %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.label "Character Name" %>
  <%= f.text_field :name %>
  <%= f.hidden_field :weapon_id, :value => 1%>
  <%= f.submit "Sign Up" %>
<% end %>
